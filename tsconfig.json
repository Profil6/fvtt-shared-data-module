{
  "compilerOptions": {
    "types": ["@league-of-foundry-developers/foundry-vtt-types"],
    "moduleResolution": "node",
    "strictNullChecks": true,
    "strict": true,
    "outDir": "build/scripts",
    "skipLibCheck": true,

    "target": "ES2020",
    "module": "ES2020",
    "lib": ["DOM", "ES6", "ES2020"]
  },
  "include": ["src/*"],
  "exclude": [
    "node_modules",
    "./node_modules",
    "./node_modules/*",
    "./node_modules/@types/node/index.d.ts"
  ]
}
